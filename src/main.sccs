$color: red;

body {
  margin: 0;
}

.flex-container {
  display: flex;
  flex-flow: row wrap;
  max-width: 1200px;
  margin: 30px auto;
}

.flex-grow-one {flex-grow: 1;}
.flex-grow-two {flex-grow: 2;}

.left-margin {margin-left: 30px;}

.message-box {
  max-width: 1200px;
  margin: 30px auto;
  padding: 30px;
  textarea {
    width: 100%;
    border-color: #d0d0d0;
    border-radius: 2px;
    resize: none;
    min-height: 50px;
    outline: auto 0;
    font-size: 14px;
  }
}